@model MyAspCoreFinalProject.Models.BloodDonor

@{
    ViewData["Title"] = "Create";
}

<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white" style="height:45px;">
            <h4>View Blood Donor</h4>
        </div>
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control-plaintext" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control-plaintext" readonly />
                    </div>
                </div>
                

                

                <div class="col-md-6 btn-group">

                    <img src="~/Images/@Model.PhotoUrl" class="img-fluid" height="100" width="100" />
                </div>
            </div>
            <div class="col-md-12">
                <table id="ExpTable" class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>
                                Organization Name
                            </th>
                            <th>
                                Donate Time
                            </th>
                            
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (var item in Model.Experiences)*@
                        @for (int i = 0; i < Model.DonorDetails.Count; i++)
                        {
                            <tr>
                                <td>

                                    <input asp-for="@Model.DonorDetails[i].OrganizationName" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.DonorDetails[i].DonateTime" class="form-control-plaintext" readonly />

                                </td>
                                <td>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

            <input type="hidden" id="hdnLastIndex" value="0" />

            <div class="col-12 btn-group">
                <div class="col-6 form-group text-right p-2">
                    <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                </div>
                <div class="col-6 form-group text-left p-2">

                </div>

            </div>

        </form>

    </div>
</div>


